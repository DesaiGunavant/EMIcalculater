<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp">

        <TextView

            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:text="Amount"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edttext1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_toEndOf="@+id/text1"
            android:hint="Enter Amount Here" />

        <TextView
            android:id="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:text="Intrest%"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edttext2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text1"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/text2"
            android:hint="Enter Intrest Here" />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginStart="40dp"

            android:layout_marginTop="20dp"
            android:text="Period"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edttext3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginStart="40dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/text2"
            android:hint="Year"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edttext4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text2"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/edttext3"
            android:hint="Month"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginStart="40dp"

            android:layout_marginTop="20dp"
            android:text="EMI"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/edttext5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text3"
            android:layout_marginStart="80dp"

            android:layout_marginTop="20dp"
            android:layout_toEndOf="@+id/text4"
            android:hint="Enter EMI"

            />

        <Button
            android:id="@+id/btncalculate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edttext5"
            android:layout_marginStart="15dp"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"
            android:text="calculat" />

        <Button
            android:id="@+id/btnreset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edttext5"
            android:layout_marginTop="40dp"

            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/btncalculate"
            android:text="reset" />

        <Button
            android:id="@+id/btndetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edttext5"
            android:layout_marginTop="40dp"
            android:layout_marginEnd="15dp"

            android:layout_toEndOf="@+id/btnreset"
            android:text="detail" />

        <TextView
            android:id="@+id/text5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnreset"
            android:layout_marginStart="40dp"
            android:layout_marginTop="60dp"
            android:text="Monthly EMI"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Yearly EMI"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text6"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Total interest"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_marginStart="40dp"
            android:layout_marginTop="30dp"
            android:text="Total Payment"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/text9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btnreset"
            android:layout_marginStart="60dp"
            android:layout_marginTop="60dp"
            android:layout_toEndOf="@+id/text5"
            android:text=""
            android:textSize="20dp" />
        <TextView
            android:id="@+id/text10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text5"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/text5"

            android:text=""
            android:textSize="20dp" />
        <TextView
            android:id="@+id/text11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text6"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/text5"
            android:text=""
            android:textSize="20dp" />
        <TextView
            android:id="@+id/text12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text7"
            android:layout_marginStart="60dp"
            android:layout_marginTop="30dp"
            android:layout_toEndOf="@+id/text8"
            android:text=""
            android:textSize="20dp" />


    </RelativeLayout>

</RelativeLayout>